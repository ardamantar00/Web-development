@model List<Slider>
@{
    Layout = "_AdminLayout";
}
<div class="row">
          <div class="col">
            <div class="card shadow">
              <div
                class="card-header py-1 d-flex justify-content-between align-items-center"
              >
                <h5 class="card-title">Slider</h5>
                <a asp-controller="Slider" asp-action = "Create" class="btn btn-sm btn-primary">
                  <i class="fa-solid fa-plus"></i>
                </a>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table
                    class="table table-bordered table-striped mb-0 table-hover"
                  >
                    <thead class="table-secondary">
                      <tr>
                        <th style="width: 20px">Id</th>
                        <th style="width: 200px">Resim</th>
                        <th>Başlık</th>
                        <th>Aktif</th>
                        <th>Index</th>
                        <th style="width: 100px"></th>
                      </tr>
                    </thead>
                    <tbody>
                      @foreach(Slider slider in Model)
                      {
                        <tr>
                        <td>@slider.Id</td>
                        <td>
                          <img
                            src="~/img/@slider.Image"
                            alt="@slider.Title"
                            class="img-fluid"
                          />
                        </td>
                        <td>@slider.Title</td>
                        <td>
                          @if(slider.IsActive)
                          {
                            <i class="fa-solid fa-circle-check text-success"></i>
                          }
                          else
                          {
                            <i class="fa-regular fa-circle-xmark text-danger"></i>
                          }
                        </td>
                        <td>@slider.Index</td>
                        <td>
                          <a
                            asp-controller="Slider"
                            asp-action="Edit"
                            class="btn btn-primary btn-sm"
                          >
                            <i class="fa-solid fa-pen-to-square"></i>
                          </a>

                          <a
                            asp-controller="Slider"
                            asp-action="Delete"
                            class="btn btn-danger btn-sm"
                          >
                            <i class="fa-solid fa-trash"></i>
                          </a>
                        </td>
                      </tr>
                      }
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>