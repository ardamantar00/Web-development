@{
    Layout = "_AdminLayout";
}
<div class="row">
          <div class="col">
            <div class="card shadow">
              <div
                class="card-header py-1 d-flex justify-content-between align-items-center"
              >
                <h5 class="card-title">Slider</h5>
                <a href="urun-ekle.html" class="btn btn-sm btn-primary">
                  <i class="fa-solid fa-plus"></i>
                </a>
              </div>
              <div class="card-body">
                <form>
                  <div class="row mb-3">
                    <label for="sliderResmi" class="col-sm-2 col-form-label">
                      Mevcut Resim
                    </label>
                    <div class="col-sm-10">
                      <img src="img/slider-1.jpeg" alt="" class="img-fluid" />
                    </div>
                  </div>
                  <div class="row mb-3">
                    <label for="sliderBaslik" class="col-sm-2 col-form-label">
                      Başlık
                    </label>
                    <div class="col-sm-10">
                      <input
                        type="text"
                        id="sliderBaslik"
                        class="form-control"
                      />
                    </div>
                  </div>
                  <div class="row mb-3">
                    <label for="sliderAciklama" class="col-sm-2 col-form-label">
                      Açıklama
                    </label>
                    <div class="col-sm-10">
                      <textarea
                        id="sliderAciklama"
                        class="form-control"
                        rows="3"
                      ></textarea>
                    </div>
                  </div>

                  <div class="row mb-3">
                    <label for="urunAktif" class="col-sm-2 col-form-label">
                      Aktif
                    </label>
                    <div class="col-sm-10">
                      <input
                        type="checkbox"
                        id="urunAktif"
                        class="form-check-input"
                      />
                    </div>
                  </div>
                  <div class="row mb-3">
                    <label for="Resim" class="col-sm-2 col-form-label">
                      Resim
                    </label>
                    <div class="col-sm-10">
                      <input type="file" id="Resim" class="form-control" />
                    </div>
                  </div>
                  <div class="row mb-3">
                    <label for="Index" class="col-sm-2 col-form-label">
                      Index
                    </label>
                    <div class="col-sm-10">
                      <input type="number" id="Index" class="form-control" />
                    </div>
                  </div>
                  <div class="row mb-3">
                    <label for="urunKategori" class="col-sm-2 col-form-label">
                      Kategori
                    </label>
                    <div class="col-sm-10">
                      <select class="form-select">
                        <option value="" selected>Seçiniz</option>
                        <option value="1">Telefon</option>
                        <option value="2">Beyaz Eşya</option>
                        <option value="3">Televizyon</option>
                      </select>
                    </div>
                  </div>

                  <div class="row mb-3">
                    <div class="col-sm-10 offset-sm-2">
                      <button type="submit" class="btn btn-primary">
                        Kaydet
                      </button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>