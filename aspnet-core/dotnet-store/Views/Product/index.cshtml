@model List<ProductGetModel>
@{
    Layout = "_AdminLayout";
}
<div class="row">
  <div class="col">
    <div class="card shadow">
      <div class="card-header py-1 d-flex justify-content-between align-items-center">
        <h5 class="card-title">Ürünler</h5>
        <a asp-controller="Product" asp-action="Create" class="btn btn-sm btn-primary">
          <i class="fa-solid fa-plus"></i>
        </a>
      </div>
      <div class="card-body">

        <form method="get">
          <div class="input-group mb-2">
            <select name = "category" class="form-select" asp-items="ViewBag.Categories">
              <option value="" selected>Hepsi</option>
            </select>
            <button class="btn btn-secondary" type="submit">
              <i class="fa-solid fa-magnifying-glass"></i>
            </button>
          </div>
        </form>
        @if(Model.Count == 0)
        {
          <p class="text-danger">Ürün bulunamadı</p>
        }
        else{
            <div class="table-responsive">
          <table class="table table-bordered table-striped mb-0 table-hover">
            <thead class="table-secondary">
              <tr>
                <th style="width: 20px">Id</th>
                <th style="width: 80px">Resim</th>
                <th>Ürün Adı</th>
                <th>Fiyat</th>
                <th>Aktif</th>
                <th>Anasayfa</th>
                <th>Kategori</th>
                <th class="width=50px"></th>
              </tr>
            </thead>
            <tbody>
              @foreach(ProductGetModel product in Model)
              {
                <tr>
                <td>@product.Id</td>
                <td>
                  <img src = "~/img/@product.Image"  alt="@product.ProductName" class="img-fluid" />
                </td>
                <td>@product.ProductName</td>
                <td>@product.Price ₺</td>
                <td>
                    @if(product.IsActive) 
                    {
                        <i class="fa-solid fa-circle-check text-success"></i>
                    }
                    else 
                    {
                        <i class="fa-regular fa-circle-xmark text-danger"></i>
                    } 
                </td>
                <td>
                    @if(product.IsHome) 
                    {
                        <i class="fa-solid fa-circle-check text-success"></i>
                    }
                    else
                    {
                        <i class="fa-regular fa-circle-xmark text-danger"></i>
                    }

                </td>
                <td>@(product.CategoryName ?? "-")</td>
                <td>
                  <a asp-controller="Product" asp-action = "Edit" asp-route-id = "@product.Id" class="btn btn-primary btn-sm">
                    <i class="fa-solid fa-pen-to-square"></i>
                  </a>
                  <a asp-controller="Product" asp-action = "Delete" asp-route-id = "@product.Id" class="btn btn-danger btn-sm">
                    <i class="fa-solid fa-trash"></i>
                  </a>
                </td>
              </tr>
              }
            </tbody>
          </table>
        </div>
        }
        
      </div>
    </div>
  </div>
</div>