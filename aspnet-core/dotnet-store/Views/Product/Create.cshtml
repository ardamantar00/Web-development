@model ProductCreateModel
@{
    Layout = "_AdminLayout";
}
 <div class="row">
          <div class="col md-9">
            <div class="card shadow">
              <div
                class="card-header py-1 d-flex justify-content-between align-items-center"
              >
                <h5 class="card-title">Ürün Ekle</h5>
                <a href="urun-ekle.html" class="btn btn-sm btn-primary">
                  <i class="fa-solid fa-plus"></i>
                </a>
              </div>
              <div class="card-body">
                
                <form method="post" enctype="multipart/form-data">
                  <div class="row mb-3">
                    <label asp-for = "ProductName" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                      <input asp-for="ProductName" class="form-control" />
                      <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                  </div>
                  
                  <div class="row mb-3">
                    <label asp-for = "Description" class="col-sm-2 col-form-label">
                      Ürün Açıklama
                    </label>
                    <div class="col-sm-10">
                      <textarea
                        asp-for="Description"
                        rows="3"
                        class="form-control"
                      ></textarea>
                      <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                  </div>
                  <div class="row mb-3">
                    <label asp-for = "Price" class="col-sm-2 col-form-label">
                      Fiyat
                    </label>
                    <div class="col-sm-10">
                      <input asp-for = "Price" class="form-control" />
                      <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                  </div>

                  <div class="row mb-3">
                    <label asp-for = "IsActive" class="col-sm-2 col-form-label">
                    </label>
                    <div class="col-sm-10">
                      <input
                        asp-for="IsActive"
                        class="form-check-input"
                      />
                     
                    </div>
                  </div>
                  <div class="row mb-3">
                    <label asp-for="IsHome" class="col-sm-2 col-form-label">
                    </label>
                    <div class="col-sm-10">
                      <input
                        asp-for="IsHome"
                        class="form-check-input"
                      />
                    </div>
                  </div>
                   <div class="row mb-3">
                    <label asp-for="Image" class="col-sm-2 col-form-label">
                    </label>
                    <div class="col-sm-10">
                      <input
                        asp-for="Image"
                         type="file" class="form-control" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                  </div>
                  <div class="row mb-3">
                    <label asp-for="CategoryId" class="col-sm-2 col-form-label">
                      Kategori
                    </label>
                    <div class="col-sm-10">
                      <select asp-for = "CategoryId" class="form-select">
                        <option value="" selected>Seçiniz</option>
                        @foreach(var category in ViewBag.Categories)
                        {
                          <option value="@category.Id">@category.CategoryName</option>
                        }
                       
                      </select>
                      <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                  </div>

                  <div class="row mb-3">
                    <div class="col-sm-10 offset-sm-2">
                      <button type="submit" class="btn btn-primary">
                        Kaydet
                      </button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
