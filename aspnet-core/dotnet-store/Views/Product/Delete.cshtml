@model Product
@{
    Layout = "_AdminLayout";
}
<div class="row">
    <div class="card">
        <div class="card-body">
            <div class="col text-center">
                <p>
                    @Model.ProductName isimli ürünü silmek istiyor musunuz ? 
                </p>
                <form asp-controller="Product" asp-action="DeleteConfirm">
                    <input type="hidden" name="id" value="@Model.Id">
                    <button type="submit" class="btn btn-danger">Sil</button>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-primary">İptal</a>
                </form>
            </div>
        </div>
    </div>
</div>