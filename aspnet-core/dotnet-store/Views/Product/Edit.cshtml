@model ProductEditModel
@{
    Layout = "_AdminLayout";
}
 <form method="post" enctype="multipart/form-data">
 <div class="row">
          <div class="col md-9">
            <div class="card shadow">
              <div
                class="card-header py-1 d-flex justify-content-between align-items-center"
              >
                <h5 class="card-title">Ürün Ekle</h5>
                <a href="urun-ekle.html" class="btn btn-sm btn-primary">
                  <i class="fa-solid fa-plus"></i>
                </a>
              </div>
              <div class="card-body">
               
                  <div class="row mb-3">
                    <input type="hidden" name="Id" value="@Model.Id">
                    <label asp-for = "ProductName" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                      <input asp-for="ProductName" class="form-control" />
                    </div>
                  </div>
                  <div class="row mb-3">
                    <label asp-for = "Description" class="col-sm-2 col-form-label">
                      Ürün Açıklama
                    </label>
                    <div class="col-sm-10">
                      <textarea
                        asp-for="Description"
                        rows="3"
                        class="form-control"
                      ></textarea>
                    </div>
                  </div>
                  <div class="row mb-3">
                    <label asp-for = "Price" class="col-sm-2 col-form-label">
                      Fiyat
                    </label>
                    <div class="col-sm-10">
                      <input asp-for = "Price" class="form-control" />
                    </div>
                  </div>

                  <div class="row mb-3">
                    <label asp-for = "IsActive" class="col-sm-2 col-form-label">
                    </label>
                    <div class="col-sm-10">
                      <input
                        asp-for="IsActive"
                        class="form-check-input"
                      />
                    </div>
                  </div>
                  <div class="row mb-3">
                    <label asp-for="IsHome" class="col-sm-2 col-form-label">
                    </label>
                    <div class="col-sm-10">
                      <input
                        asp-for="IsHome"
                        class="form-check-input"
                      />
                    </div>
                  </div>
                  <div class="row mb-3">
                    <label asp-for="CategoryId" class="col-sm-2 col-form-label">
                      Kategori
                    </label>
                    <div class="col-sm-10">
                      <select asp-for = "CategoryId" class="form-select">
                        <option value="" selected>Seçiniz</option>
                        @foreach(var category in ViewBag.Categories)
                        {
                          <option value="@category.Id">@category.CategoryName</option>
                        }
                       
                      </select>
                    </div>
                  </div>
                  <div class="row mb-3">
                    <div class="col-sm-10 offset-sm-2">
                      <button type="submit" class="btn btn-primary">
                        Kaydet
                      </button>
                    </div>
                  </div>
                
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card shadow">
              <div class="card-body">
                <img src="~/img/@Model.ImageName" class ="img-thumbnail" />
                <input asp-for="ImageFile" class="form-control mt-3" />
              </div>
            </div>
          </div>
        </div>
</form>